{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Tero Documentation",
  "colors": {
    "primary": "#10b981",
    "light": "#10b981",
    "dark": "#059669"
  },
  "background": {
    "color": {
      "light": "#fafafa",
      "dark": "#0a0a0a"
    }
  },
  "appearance": {
    "default": "dark",
    "strict": true
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "icon": "book",
        "groups": [
          {
            "group": "Introduction",
            "pages": [
              "introduction/what-is-tero",
              "introduction/the-hardest-question",
              "introduction/how-it-works"
            ]
          }
        ]
      },
      {
        "tab": "Edge",
        "icon": "microchip",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "edge/overview",
              "edge/concepts",
              "edge/architecture",
              "edge/quickstart"
            ]
          },
          {
            "group": "Distributions",
            "pages": [
              "edge/distributions/datadog",
              "edge/distributions/otlp",
              "edge/distributions/all"
            ]
          },
          {
            "group": "Edge Reference",
            "pages": ["edge/reference/config"]
          },
          {
            "group": "Policy Reference",
            "pages": [
              "edge/reference/log-filter",
              "edge/reference/log-transform",
              "edge/reference/metric-filter",
              "edge/reference/metric-transform",
              "edge/reference/trace-filter"
            ]
          }
        ]
      },
      {
        "tab": "Trust Center",
        "icon": "shield-check",
        "groups": [
          {
            "group": "Trust Center",
            "pages": [
              "trust/overview",
              "trust/security",
              "trust/privacy",
              "trust/compliance",
              "trust/resilience"
            ]
          },
          {
            "group": "Reference",
            "pages": [
              "trust/checklist",
              "trust/sub-processors",
              "trust/documents"
            ]
          }
        ]
      }
    ]
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@usetero.com"
      },
      {
        "label": "Status",
        "href": "https://status.usetero.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Sign In",
      "href": "https://app.usetero.com"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/usetero",
      "github": "https://github.com/usetero"
    }
  }
}
